\underset{K\times K}{H} & :=\underset{K\times T}{y^{\prime}}\underset{T\times K}{y}=\\
\\
y_{t} & =\sum_{i=0}^{\infty}\Phi_{i}u_{t-i}\\
y_{t}y_{t}^{\prime} & =\left(\sum_{i=0}^{\infty}\Phi_{i}u_{t-i}\right)\left(\sum_{i=0}^{\infty}\Phi_{i}u_{t-i}\right)^{\prime}\\
 & =\left(\sum_{i=0}^{\infty}\Phi_{i}u_{t-i}\right)\left(\sum_{j=0}^{\infty}(\Phi_{j}u_{t-j})^{\prime}\right)\\
 & =\sum_{k=0}^{\infty}\varUpsilon_{k}\text{ \ensuremath{\quad}where }\varUpsilon_{k}=\sum_{l=0}^{k}\Phi_{l}u_{t-l}(\Phi_{k-l}u_{t-(k-l)})^{\prime}\\
\varUpsilon_{k} & =\sum_{l=0}^{k}\Phi_{l}u_{t-l}u_{t-(k-l)}^{\prime}\Phi_{k-l}^{\prime}\\
\\
\min_{\|z\|_{2}=1}\left\{ \frac{1}{2}z^{\prime}H_{q}z\right\} +\frac{1}{2}\Gamma_{0}^{\prime}H_{q}\Gamma_{0}+g_{q}^{\prime}\Gamma_{0} & =\frac{1}{2}\lambda_{\min}(H_{q})+\frac{1}{2}\Gamma_{0}^{\prime}H_{q}\Gamma_{0}+g_{q}^{\prime}\Gamma_{0}\\
