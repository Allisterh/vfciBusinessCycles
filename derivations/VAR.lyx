\end_layout

\begin_layout Standard
We model the heteroskedasticity of the reduced-form VAR residuals by
\begin_inset Formula 
\begin{align}
\log u_{t}^{2} & =C_{0}y_{t}+C_{1}y_{t-1}+\ldots+C_{p}y_{t-p}+\varepsilon_{t}\label{eq:het_def}
\end{align}

\end_inset


\begin_inset Formula 
\begin{align*}
\log[(u_{t}^{[k]})^{2}] & =C_{0}^{[k]}y_{t}+C_{1}^{[k]}y_{t-1}+\ldots+C_{p}^{[k]}y_{t-p}+\varepsilon_{t}^{[k]}\\
\text{Assume } & C_{i}^{[k]}=0\text{ for }i\geq1\\
\log[(u_{t}^{[k]})^{2}] & =C_{0}^{[k]}y_{t}+\varepsilon_{t}^{[k]}\\
\text{Stack the equations}\\
\underset{T\times1}{\log[(u^{[k]})^{2}]} & =\underset{T\times K}{y}\underset{K\times1}{C_{0}^{[k]}{}^{\prime}}+\underset{T\times1}{\varepsilon^{[k]}}\\
\underset{K\times K}{H} & :=\underset{K\times T}{y^{\prime}}\underset{T\times K}{y},\\
\underset{K\times1}{g} & :=-\underset{K\times T}{y^{\prime}}\underset{T\times1}{\log[(u^{[k]})^{2}]},\\
\beta & :=\frac{1}{2}\left\Vert \log[(u^{[k]})^{2}]\right\Vert _{2}^{2}.\\
