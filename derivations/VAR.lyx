FE_{t-1}(1) & =y_{t}-y_{t\mid t-1}=\Phi_{0}u_{t}=u_{t}\\
FE_{t-1}(2) & =\Phi_{0}u_{t+1}+\Phi_{1}u_{t+2}=u_{t+1}+J\mathbf{A}J^{\prime}u_{t+2}\\
FE_{t-1}(3) & =y_{t+2}-y_{t+2\mid t-1}=\Phi_{0}u_{t+2}+\Phi_{1}u_{t+3}+\Phi_{2}u_{t+4}=u_{t+2}+J\mathbf{A}J^{\prime}\Phi_{1}u_{t+3}+J\mathbf{A}^{2}J^{\prime}\Phi_{2}u_{t+4}\\
FE_{t-1}(h)FE_{t-1}(h)^{\prime} & =\left(\sum_{i=0}^{h-1}\Phi_{i}u_{t-1+h+i}\right)\left(\sum_{i=0}^{h-1}\Phi_{i}u_{t-1+h+i}\right)^{\prime}\\
 & =\left(\sum_{i=0}^{h-1}\Phi_{i}u_{t-1+h+i}\right)\left(\sum_{j=0}^{h-1}u_{t-1+h+j}^{\prime}\Phi_{j}^{\prime}\right)\\
 & =\sum_{i=0}^{h-1}\sum_{j=0}^{h-1}\Phi_{i}u_{t-1+h+i}u_{t-1+h+j}^{\prime}\Phi_{j}^{\prime}\\
 & =\sum_{i=0}^{h-1}\Phi_{i}u_{t-1+h+i}u_{t-1+h+i}^{\prime}\Phi_{i}^{\prime}+\sum_{i=0}^{h-1}\sum_{j=0,j\neq i}^{h-1}\Phi_{i}u_{t-1+h+i}u_{t-1+h+j}^{\prime}\Phi_{j}^{\prime}\\
FEV_{t}(h) & :=\mathbb{E}_{t}[(y_{t+h}-y_{t+h\mid t-1})(y_{t+h}-y_{t+h\mid t-1})^{\prime}]\\
 & =\mathbb{E}_{t}[FE_{t}(h)FE_{t}(h)^{\prime}]\\
 & =\mathbb{E}_{t}\left[\left(\sum_{i=0}^{h-1}\Phi_{i}u_{t+h+i}\right)\left(\sum_{i=0}^{h-1}\Phi_{i}u_{t+h+i}\right)^{\prime}\right]\\
 & =\left[\sum_{i=0}^{h-1}\sum_{j=0}^{h-1}\Phi_{i}\mathbb{E}_{t}[u_{t+h+i}u_{t+h+j}^{\prime}]\Phi_{j}^{\prime}\right]\\
 & =\left[\sum_{i=0}^{h-1}\sum_{j=0}^{h-1}\Phi_{i}\mathbb{E}_{t}[u_{t+h+i}u_{t+h+j}^{\prime}]\Phi_{j}^{\prime}\right]\\
\mathbb{E}[(y_{t+1}-y_{t+1\mid t})(y_{t+1}-y_{t+1\mid t})^{\prime}] & =\Phi_{0}\Sigma_{u}\Phi_{0}^{\prime}\\
\mathbb{E}[(y_{t+2}-y_{t+2\mid t})(y_{t+2}-y_{t+2\mid t})^{\prime}] & =\sum_{i=0}^{1}\Phi_{i}\Sigma_{u}\Phi_{i}^{\prime}
\end{align*}

\end_inset


\end_layout

\begin_layout Section
Appendix: Useful Theorems
\end_layout

\begin_layout Theorem*
Let the symmetric matrix 
\begin_inset Formula $H\in\mathbb{R}^{n\times n}$
\end_inset

 have smallest eigenvalue 
\begin_inset Formula $\lambda_{\min}(H)$
\end_inset

 and largest eigenvalue 
\begin_inset Formula $\lambda_{\max}(H)$
\end_inset

.
 Then, for all 
\begin_inset Formula $u\in\mathbb{R}^{n}$
\end_inset

, 
\begin_inset Formula 
\[
\lambda_{\min}(H)\|u\|_{2}^{2}\leq u^{T}Hu\leq\lambda_{\max}(H)\|u\|_{2}^{2},
\]

\end_inset

 with equality holding on the left for every eigenvector 
\begin_inset Formula $u$
\end_inset

 for 
\begin_inset Formula $\lambda_{\min}(H)$
\end_inset

 and equality holding on the right for every eigenvector 
\begin_inset Formula $u$
\end_inset

 for 
\begin_inset Formula $\lambda_{\max}(H)$
\end_inset

.
\end_layout

\begin_layout Standard
A corollary is that
\begin_inset Formula 
\begin{align*}
\lambda_{\max}(H) & =\max_{u\text{ s.t. }\|u\|_{2}=1}u^{T}Hu\\
\text{eigenvector for }\lambda_{\max}(H) & =\arg\max_{u\text{ s.t. }\|u\|_{2}=1}u^{T}Hu
\end{align*}

\end_inset

and
\begin_inset Formula 
\begin{align*}
\lambda_{\min}(H) & =\min_{u\text{ s.t. }\|u\|_{2}=1}u^{T}Hu\\
\text{eigenvector for }\lambda_{\min}(H) & =\arg\min_{u\text{ s.t. }\|u\|_{2}=1}u^{T}Hu
\end{align*}

\end_inset


\end_layout

\begin_layout Theorem*
If 
\begin_inset Formula $Q$
\end_inset

 is a real symmetric matrix, its eigenvectors corresponding to different
 eigenvalues are orthogonal.
 If 
\begin_inset Formula $Q$
\end_inset

 is a symmetric matrix, then 
\begin_inset Formula $Q$
\end_inset

 has 
\begin_inset Formula $n$
\end_inset

 (distinct) eigenvectors that form an orthonormal basis for 
\begin_inset Formula $\mathbb{R}^{n}$
\end_inset

.
\end_layout

\begin_layout Standard
We denote the set of real 
\begin_inset Formula $n\times n$
\end_inset

 symmetric matrices by 
\begin_inset Formula $\mathcal{S}^{n}$
\end_inset

, the set of positive semi-definite real 
\begin_inset Formula $n\times n$
\end_inset

 symmetric matrices by 
\begin_inset Formula $\mathcal{S}_{+}^{n}$
\end_inset

, and the set of positive definite real 
\begin_inset Formula $n\times n$
\end_inset

 symmetric matrices by 
\begin_inset Formula $\mathcal{S}_{++}^{n}$
\end_inset

.
\end_layout

\begin_layout Theorem*
Let 
\begin_inset Formula $H\in\mathcal{S}_{+}^{n}$
\end_inset

 have rank 
\begin_inset Formula $k$
\end_inset

.
 Then there is a lower triangular matrix 
\begin_inset Formula $L\in\mathbb{R}^{n\times k}$
\end_inset

 such that 
\begin_inset Formula $H=LL^{T}$
\end_inset

.
 Moreover, if the rank of 
\begin_inset Formula $H$
\end_inset

 is 
\begin_inset Formula $n$
\end_inset

, then there is a positive diagonal matrix 
\begin_inset Formula $D$
\end_inset

 and a lower triangular matrix 
\begin_inset Formula $\widetilde{L}$
\end_inset

 with ones on it diagonal such that 
\begin_inset Formula $H=\widetilde{L}D\widetilde{L}^{T}$
\end_inset

.
\end_layout

\begin_layout Subsubsection*
Spectral decomposition
\end_layout

\begin_layout Theorem*
For any 
\begin_inset Formula $k\times k$
\end_inset

 symmetric matrix 
\begin_inset Formula $\boldsymbol{A}$
\end_inset

 the quadratic form defined by 
\begin_inset Formula $\boldsymbol{A}$
\end_inset

 can be written using its spectral decomposition as 
\begin_inset Formula 
\[
Q(\boldsymbol{x})=\boldsymbol{x}^{\prime}\boldsymbol{A}\boldsymbol{x}=\sum_{i=1}^{k}\lambda_{i}\left\Vert \boldsymbol{q}_{i}^{\prime}\boldsymbol{x}\right\Vert ^{2}
\]

\end_inset

 where the eigendecomposition of 
\begin_inset Formula $\boldsymbol{A}$
\end_inset

 is 
\begin_inset Formula $\boldsymbol{Q}^{\prime}\boldsymbol{\Lambda}\boldsymbol{Q}$
\end_inset

 with 
\begin_inset Formula $\boldsymbol{\Lambda}$
\end_inset

 diagonal with diagonal elements 
\begin_inset Formula $\lambda_{i},i=1,\ldots,k,\boldsymbol{Q}$
\end_inset

 is the orthogonal matrix with the eigenvectors, 
\begin_inset Formula $\boldsymbol{q}_{i},i=1,\ldots,k$
\end_inset

 as its columns.
 (Be careful to distinguish the bold face 
\begin_inset Formula $\boldsymbol{Q}$
\end_inset

$, which is a matrix, from the unbolded 
\begin_inset Formula $Q(\boldsymbol{x})$
\end_inset

, which is the quadratic form.)
\end_layout

\begin_layout Proof
For any 
\begin_inset Formula $\boldsymbol{x}\in\mathbb{R}^{k}$
\end_inset

 let 
\begin_inset Formula $\boldsymbol{y}=\boldsymbol{Q}^{\prime}\boldsymbol{x}=\boldsymbol{Q}^{-1}\boldsymbol{x}$
\end_inset

.
 Then 
\begin_inset Formula 
\begin{align*}
Q(\boldsymbol{x}) & =\operatorname{tr}\left(\boldsymbol{x}^{\prime}\boldsymbol{A}\boldsymbol{x}\right)\\
 & =\operatorname{tr}\left(\boldsymbol{x}^{\prime}\boldsymbol{Q}\boldsymbol{\Lambda}\boldsymbol{Q}^{\prime}\boldsymbol{x}\right)\\
 & =\operatorname{tr}\left(\boldsymbol{y}^{\prime}\boldsymbol{\Lambda}\boldsymbol{y}\right)\\
 & =\operatorname{tr}\left(\boldsymbol{\Lambda}\boldsymbol{y}\boldsymbol{y}^{\prime}\right)\\
 & =\sum_{i=1}^{k}\lambda_{i}y_{i}^{2}\\
 & =\sum_{i=1}^{k}\lambda_{i}\left\Vert \boldsymbol{q}_{i}^{\prime}\boldsymbol{x}\right\Vert ^{2}
\end{align*}

\end_inset


\end_layout

\begin_layout Subsubsection*
The power method
\end_layout

\begin_layout Standard
The dominant eigenvalue of the 
\begin_inset Formula $n\times n$
\end_inset

 matrix 
\begin_inset Formula $A$
\end_inset

 is the unique eigenvalue of greatest absolute value, if such an eigenvalue
 exists.
 The power method iteratively computes the dominant eigenvalue of 
\begin_inset Formula $A$
\end_inset

 and its corresponding eigenvector.
 Begin by choosing a vector 
\begin_inset Formula $\mathbf{x}_{0}$
\end_inset

 such that 
\begin_inset Formula $\left\Vert \mathbf{x}_{0}\right\Vert _{2}=1$
\end_inset

, and define 
\begin_inset Formula 
\[
\mathbf{x}_{k+1}=\frac{A\mathbf{x}_{k}}{\left\Vert A\mathbf{x}_{k}\right\Vert _{2}}.
\]

\end_inset

If 
\begin_inset Formula $A$
\end_inset

 has a dominant eigenvalue 
\begin_inset Formula $\lambda$
\end_inset

, and if the projection of 
\begin_inset Formula $\mathbf{x}_{0}$
\end_inset

 onto the subspace spanned by the eigenvectors corresponding to 
\begin_inset Formula $\lambda$
\end_inset

 is nonzero, then the sequence of vectors 
\begin_inset Formula $\left\{ x_{k}\right\} _{k=0}^{\infty}$
\end_inset

 converges to an eigenvector 
\begin_inset Formula $\mathbf{x}$
\end_inset

 of 
\begin_inset Formula $A$
\end_inset

 corresponding to 
\begin_inset Formula $\lambda$
\end_inset

.
\end_layout

\begin_layout Standard
Since 
\begin_inset Formula $\mathbf{x}$
\end_inset

 is an eigenvector of 
\begin_inset Formula $A$
\end_inset

, 
\begin_inset Formula $A\mathbf{x}=\lambda\mathbf{x}$
\end_inset

.
 Left multiplying by 
\begin_inset Formula $\mathbf{x}^{\prime}$
\end_inset

 on each side results in 
\begin_inset Formula $\mathbf{x}^{\prime}A\mathbf{x}=\lambda\mathbf{x}^{\prime}\mathbf{x}$
\end_inset

, and hence 
\begin_inset Formula $\lambda=\frac{\mathbf{x}^{\prime}A\mathbf{x}}{\mathbf{x}^{\prime}\mathbf{x}}$
\end_inset

.
 This ratio is called the Rayleigh quotient.
 However, since each 
\begin_inset Formula $\mathbf{x}_{k}$
\end_inset

 is normalized, 
\begin_inset Formula $\mathbf{x}^{\prime}\mathbf{x}=\|\mathbf{x}\|_{2}^{2}=1$
\end_inset

, so 
\begin_inset Formula $\lambda=\mathbf{x}^{\prime}A\mathbf{x}$
\end_inset

.
\end_layout

\begin_layout Subsubsection*
Moments of quadratic forms
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $\mathcal{X}$
\end_inset

 be a 
\begin_inset Formula $k$
\end_inset

-dimensional random vector and 
\begin_inset Formula $\boldsymbol{A}$
\end_inset

 be a constant 
\begin_inset Formula $k\times k$
\end_inset

 symmetric matrix.
 If 
\begin_inset Formula $E(\mathcal{X})=\boldsymbol{\mu}$
\end_inset

 and 
\begin_inset Formula $\operatorname{Var}(\mathcal{X})=\boldsymbol{\Sigma}$
\end_inset

, then 
\begin_inset Formula 
\[
E\left(\mathcal{X}^{\prime}\boldsymbol{A}\mathcal{X}\right)=\operatorname{tr}(\boldsymbol{A}\boldsymbol{\Sigma})+\boldsymbol{\mu}^{\prime}\boldsymbol{A}\boldsymbol{\mu}.
\]

\end_inset


\end_layout

\begin_layout Section
Appendix: Quadratic Optimization
\end_layout

\begin_layout Subsection
Least Squares
\end_layout

\begin_layout Standard
Consider a linear regression of a variable 
\begin_inset Formula $y_{t}$
\end_inset

 on the 
\begin_inset Formula $k$
\end_inset

 variables 
\begin_inset Formula $(x_{1t},\ldots,x_{kt})$
\end_inset

: 
\begin_inset Formula 
\begin{equation}
y_{t}=a+b_{1}x_{1t}+\ldots+b_{k}x_{kt}+\epsilon_{t},\quad t=1,2,\ldots,T,\label{eq:OLS_t}
\end{equation}

\end_inset

where we observe the 
\begin_inset Formula $T\times1$
\end_inset

 vector of dependent variables
\begin_inset Formula 
\[
\mathbf{y}:=[y_{1},\ldots,y_{T}]^{\prime}
\]

\end_inset

and the 
\begin_inset Formula $T\times k$
\end_inset

 matrix of 
\begin_inset Formula $k$
\end_inset

 independent variables
\begin_inset Formula 
\[
\mathbf{x}:=[\boldsymbol{x}_{1},\ldots,\boldsymbol{x}_{k}],
\]

\end_inset

where each 
\begin_inset Formula $\boldsymbol{x}_{i}:=[x_{i1},x_{i2},\ldots,x_{iT}]^{\prime}$
\end_inset

 is a 
\begin_inset Formula $T\times1$
\end_inset

 vector.
 We seek to compute the least-squares estimates of the 
\begin_inset Formula $(1+k)\times1$
\end_inset

 vector of parameters 
\begin_inset Formula $\mathbf{b}:=[a,b_{1},\ldots,b_{k}]^{\prime}$
\end_inset

 as a function of the data 
\begin_inset Formula $(\mathbf{y},\mathbf{x})$
\end_inset

 by minimizing the sum of squared errors
\begin_inset Formula 
\[
\left\Vert {\normalcolor \boldsymbol{\epsilon}}\right\Vert _{2}^{2},
\]

\end_inset

where 
\begin_inset Formula ${\normalcolor \boldsymbol{\epsilon}}:=[\epsilon_{1},\ldots,\epsilon_{t}]^{\prime}$
\end_inset

 is a 
\begin_inset Formula $T\times1$
\end_inset

 vector of residuals and 
\begin_inset Formula $\left\Vert \cdot\right\Vert _{2}$
\end_inset

 is the 
\begin_inset Formula $2$
\end_inset

-norm (Euclidean norm).
 Stacking (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:OLS_t"

\end_inset

), we can write it as
\begin_inset Formula 
\[
\underset{T\times1}{\mathbf{y}}=\underset{T\times(1+k)}{\mathbf{X}}\underset{(1+k)\times1}{\mathbf{b}}+\underset{T\times1}{\boldsymbol{\epsilon}},
\]

\end_inset

where 
\begin_inset Formula $\mathbf{X}$
\end_inset

 is the 
\begin_inset Formula $T\times(1+k)$
\end_inset

 matrix obtained by adding a column of ones to 
\begin_inset Formula $\mathbf{x}$
\end_inset

, i.e., if 
\begin_inset Formula $\boldsymbol{1}=[1,...,1]^{\prime}$
\end_inset

 is the 
\begin_inset Formula $T\times1$
\end_inset

 vector of ones,
\begin_inset Formula 
\[
\mathbf{X}:=[\boldsymbol{1},\boldsymbol{x}_{1},\ldots,\boldsymbol{x}_{k}].
\]

\end_inset

 
\end_layout

\begin_layout Standard
The minimization problem is then
\begin_inset Formula 
\begin{equation}
\min_{\mathbf{b}}\frac{1}{2}\left\Vert {\normalcolor \boldsymbol{\epsilon}}\right\Vert _{2}^{2}=\min_{\mathbf{b}}\frac{1}{2}\left\Vert \mathbf{y}-\mathbf{X}\mathbf{b}\right\Vert _{2}^{2}\label{eq:ls_opt}
\end{equation}

\end_inset

We can write the objective as a quadratic in 
\begin_inset Formula $\mathbf{b}$
\end_inset


\begin_inset Formula 
\begin{align}
\frac{1}{2}\left\Vert \mathbf{y}-\mathbf{X}\mathbf{b}\right\Vert _{2}^{2} & =\frac{1}{2}\mathbf{b}^{\prime}(\mathbf{X}^{\prime}\mathbf{X})\mathbf{b}-(\mathbf{X}^{\prime}\mathbf{y})^{\prime}\mathbf{b}+\frac{1}{2}\left\Vert \mathbf{y}\right\Vert _{2}^{2}\nonumber \\
 & =\frac{1}{2}\mathbf{b}^{\prime}H\mathbf{b}+g^{\prime}\mathbf{b}+\beta\label{eq:quad_b}
\end{align}

\end_inset

where
\begin_inset Formula 
\begin{align*}
H & :=\mathbf{X}^{\prime}\mathbf{X},\\
g & :=-\mathbf{X}^{\prime}\mathbf{y},\\
\beta & :=\frac{1}{2}\left\Vert \mathbf{y}\right\Vert _{2}^{2}.
\end{align*}

\end_inset

Then we have that:
\end_layout

\begin_layout Enumerate
A solution 
\begin_inset Formula $x^{*}$
\end_inset

 to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:ls_opt"
plural "false"
caps "false"
noprefix "false"

\end_inset

) exists iff 
\begin_inset Formula $H$
\end_inset

 is positive semi-definite and there exists a solution 
\begin_inset Formula $\bar{x}$
\end_inset

 to 
\begin_inset Formula $Hx+g=0$
\end_inset

, in which case 
\begin_inset Formula $x^{*}=\bar{x}$
\end_inset

 is a global solution to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:ls_opt"
plural "false"
caps "false"
noprefix "false"

\end_inset

).
\end_layout

\begin_layout Enumerate
If 
\begin_inset Formula $H$
\end_inset

 is positive definite, (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:ls_opt"
plural "false"
caps "false"
noprefix "false"

\end_inset

) has a unique global solution given by 
\begin_inset Formula $x^{*}=-H^{-1}g$
\end_inset

.
\end_layout

\begin_layout Enumerate
If 
\begin_inset Formula $H$
\end_inset

 is not positive semi-definite or if there is no solution to 
\begin_inset Formula $Hx+g=0$
\end_inset

 (or both), then there is no solution to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:ls_opt"
plural "false"
caps "false"
noprefix "false"

\end_inset

).
\end_layout

\begin_layout Standard
Since 
\begin_inset Formula $H=\mathbf{X}^{\prime}\mathbf{X}$
\end_inset

 is positive semi-definite (because it is the product of a matrix and its
 transpose), then a solution to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:ls_opt"
plural "false"
caps "false"
noprefix "false"

\end_inset

) always exists.
\end_layout

\begin_layout Standard
Using Cholesky
\end_layout

\begin_layout Subsubsection
A useful transformation
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula 
\[
\Gamma_{0}:=-H^{-1}g.
\]

\end_inset

We transform (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:quad_b"

\end_inset

) into a quadratic function without a linear term on a new variable 
\begin_inset Formula $z$
\end_inset

 defined by
\begin_inset Formula 
\begin{equation}
\mathbf{b}:=\Gamma z+\Gamma_{0}\label{eq:z_def}
\end{equation}

\end_inset

where 
\begin_inset Formula $\Gamma$
\end_inset

 is any invertible matrix: 
\begin_inset Formula 
\[
\frac{1}{2}\mathbf{b}^{\prime}H\mathbf{b}+g^{\prime}\mathbf{b}+\beta=\frac{1}{2}z^{\prime}\Gamma{}^{\prime}H\Gamma z-\frac{1}{2}g^{\prime}H^{-1}g+\beta.
\]

\end_inset

The maximization problem (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:ls_opt"

\end_inset

) becomes
\begin_inset Formula 
\begin{align}
\min_{\mathbf{b}}\left(\frac{1}{2}\mathbf{b}^{\prime}H\mathbf{b}+g^{\prime}\mathbf{b}+\beta\right) & =\min_{z}\left(\frac{1}{2}z^{\prime}\Gamma{}^{\prime}H\Gamma z-\frac{1}{2}g^{\prime}H^{-1}g+\beta\right)\nonumber \\
 & =\min_{z}\left(\frac{1}{2}z^{\prime}\Gamma{}^{\prime}H\Gamma z\right)-\frac{1}{2}g^{\prime}H^{-1}g+\beta.\label{eq:ls_opt_z}
\end{align}

\end_inset

Given a solution 
\begin_inset Formula $z^{*}$
\end_inset

 to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:ls_opt_z"

\end_inset

), a solution 
\begin_inset Formula $\mathbf{b}^{*}$
\end_inset

 to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:ls_opt"

\end_inset

) can be found by using (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:z_def"

\end_inset

):
\begin_inset Formula 
\[
\mathbf{b^{*}}:=\Gamma z^{*}+\Gamma_{0}.
\]

\end_inset


\end_layout

\begin_layout Subsection
Linearly Constrained Least Squares
\end_layout

\begin_layout Standard
Consider the problem 
\begin_inset Formula 
\begin{align}
\min_{\mathbf{b}}\frac{1}{2}\left\Vert \mathbf{y}-\mathbf{X}\mathbf{b}\right\Vert _{2}^{2} & =\min_{\mathbf{b}}\left\{ \frac{1}{2}\mathbf{b}^{\prime}H\mathbf{b}+g^{\prime}\mathbf{b}\right\} +\beta\nonumber \\
s.t.\nonumber \\
\Gamma\mathbf{b} & =\gamma,\label{eq:eq:ls_opt_lin_const}
\end{align}

\end_inset

where 
\begin_inset Formula $\Gamma$
\end_inset

 is an 
\begin_inset Formula $m\times(1+k)$
\end_inset

 matrix and 
\begin_inset Formula $\gamma$
\end_inset

 is an an 
\begin_inset Formula $m\times1$
\end_inset

 vector.
 This is the same as (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:ls_opt"

\end_inset

) but with 
\begin_inset Formula $m$
\end_inset

 linear constraints.
 We consider three cases:
\end_layout

\begin_layout Enumerate
If there are no 
\begin_inset Formula $\mathbf{b}$
\end_inset

 such that 
\begin_inset Formula $\Gamma\mathbf{b}=\gamma$
\end_inset

, then a solution to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:eq:ls_opt_lin_const"

\end_inset

) does not exist
\end_layout

\begin_layout Enumerate
If there is a unique 
\begin_inset Formula $\hat{\mathbf{b}}$
\end_inset

 such that 
\begin_inset Formula $\Gamma\hat{\mathbf{b}}=\gamma$
\end_inset

, then 
\begin_inset Formula $\mathbf{b}^{*}=\hat{\mathbf{b}}$
\end_inset

 is the unique solution to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:eq:ls_opt_lin_const"

\end_inset

).
 
\end_layout

\begin_layout Enumerate
If there exists more than one 
\begin_inset Formula $\hat{\mathbf{b}}$
\end_inset

 such that 
\begin_inset Formula $\Gamma\hat{\mathbf{b}}=\gamma$
\end_inset

, then
\begin_inset Formula 
\[
\{\mathbf{b}\mid\Gamma\mathbf{b}=\gamma\}=\hat{\mathbf{b}}+\operatorname{Null}(\Gamma)
\]

\end_inset

with 
\begin_inset Formula $\text{Null}(\Gamma)\neq\{0\}$
\end_inset

 and 
\begin_inset Formula $m<1+k$
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Enumerate
A local solution to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:eq:ls_opt_lin_const"

\end_inset

) exists if and only if 
\begin_inset Formula $u^{\prime}Hu\geq0$
\end_inset

 for all 
\begin_inset Formula $u\in\operatorname{Null}(\Gamma)$
\end_inset

 and there exists a vector pair 
\begin_inset Formula $(\bar{\mathbf{b}},\bar{\mathbf{c}})\in\mathbb{R}^{k+1}\times\mathbb{R}^{m}$
\end_inset

 such that 
\begin_inset Formula $H\bar{\mathbf{b}}+\Gamma^{\prime}\bar{\mathbf{c}}+g=0$
\end_inset

, in which case 
\begin_inset Formula $\bar{\mathbf{b}}$
\end_inset

 is a global solution to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:eq:ls_opt_lin_const"

\end_inset

).
\end_layout

\begin_layout Quotation
The problem (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:eq:ls_opt_lin_const"

\end_inset

) has a unique global solution if and only if 
\begin_inset Formula $u^{\prime}Hu>0$
\end_inset

 for all 
\begin_inset Formula $u\in\operatorname{Null}(\Gamma)\backslash\{0\}$
\end_inset

.
 If, in addition, 
\begin_inset Formula $\operatorname{rank}(\Gamma)=m$
\end_inset

, the matrix 
\begin_inset Formula 
\[
M:=\left[\begin{array}{cc}
H & \Gamma^{\prime}\\
\Gamma & 0
\end{array}\right]\text{ is invertible, and the vector }\left[\begin{array}{l}
\bar{\mathbf{b}}\\
\bar{\mathbf{c}}
\end{array}\right]=M^{-1}\left[\begin{array}{c}
-g\\
\gamma
\end{array}\right]
\]

\end_inset

has 
\begin_inset Formula $\bar{\mathbf{b}}$
\end_inset

 as the unique global solution to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:eq:ls_opt_lin_const"

\end_inset

).
 Note that 
\begin_inset Formula $\operatorname{rank}(\Gamma)=m$
\end_inset

 can always be satisfied by replacing 
\begin_inset Formula $\Gamma$
\end_inset

 by first row reducing 
\begin_inset Formula $\Gamma$
\end_inset

 to echelon form.
