\begin_layout Standard
Consider the following structural VAR
\begin_inset Formula 
\[
B_{0}y_{t}=\mu+B_{1}y_{t-1}+B_{2}y_{t-2}+w_{t},
\]

\end_inset

where 
\begin_inset Formula $y_{t}$
\end_inset

 is a zero-mean 
\begin_inset Formula $2\times1$
\end_inset

 vector, 
\begin_inset Formula $\mu$
\end_inset

 is a 
\begin_inset Formula $2\times1$
\end_inset

 vector of constants, 
\begin_inset Formula $B_{i}$
\end_inset

 are 
\begin_inset Formula $2\times2$
\end_inset

 matrices of coefficients and 
\begin_inset Formula $w_{t}$
\end_inset

 is a 
\begin_inset Formula $2\times1$
\end_inset

 vector of mutually uncorrelated structural shocks with covariance matrix
 equal to the identity matrix 
\begin_inset Formula $\mathbb{E}[w_{t}w_{t}^{\prime}]=I_{2}$
\end_inset

.
\end_layout

\begin_layout Standard
If 
\begin_inset Formula $B_{0}$
\end_inset

 is invertible, the reduced form is 
\begin_inset Formula 
\begin{align}
y_{t} & =\nu+A_{1}y_{t-1}+A_{2}y_{t-2}+u_{t}\label{eq:red-1}
\end{align}

\end_inset

where
\begin_inset Formula 
\begin{align}
\nu & :=B_{0}^{-1}\mu\nonumber \\
A_{p} & :=B_{0}^{-1}B_{p},\\
u_{t} & :=B_{0}^{-1}w_{t}.\label{eq:u_def-1}
\end{align}

\end_inset

The covariance matrix of 
\begin_inset Formula $u_{t}$
\end_inset

 is
\begin_inset Formula 
\begin{equation}
\Sigma_{u}:=\mathbb{E}[u_{t}u_{t}^{\prime}]=B_{0}^{-1}B_{0}^{-1\prime}.\label{eq:sigma_u-1}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The VAR(1) representation of (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:red-1"

\end_inset

) is
\begin_inset Formula 
\begin{equation}
Y_{t}=\boldsymbol{\nu}+\mathbf{A}Y_{t-1}+U_{t},\label{eq:var_ar1-1}
\end{equation}

\end_inset

where
\begin_inset Formula 
\[
Y_{t}:=\left(\begin{array}{c}
y_{t}\\
y_{t-1}
\end{array}\right),\quad\boldsymbol{\nu}:=\left(\begin{array}{c}
\nu\\
0
\end{array}\right),\quad\mathbf{A}:=\left[\begin{array}{cc}
A_{1} & A_{2}\\
I_{2} & 0
\end{array}\right],\quad U_{t}:=\left(\begin{array}{c}
u_{t}\\
0
\end{array}\right)
\]

\end_inset

The vector 
\begin_inset Formula $Y_{t}$
\end_inset

 is 
\begin_inset Formula $4\times1$
\end_inset

, the vector 
\begin_inset Formula $\boldsymbol{\nu}$
\end_inset

 is 
\begin_inset Formula $4\times1$
\end_inset

, the matrix 
\begin_inset Formula $\mathbf{A}$
\end_inset

 is 
\begin_inset Formula $4\times4$
\end_inset

, and 
\begin_inset Formula $U_{t}$
\end_inset

 is 
\begin_inset Formula $4\times1$
\end_inset

.
 Let 
\begin_inset Formula 
\[
\underset{2\times4}{J}:=[I_{2},0_{2\times2}].
\]

\end_inset

Then
\begin_inset Formula 
\begin{align}
J^{\prime}J & :=\left[\begin{array}{cc}
I_{2} & 0_{2\times2}\\
0_{2\times2} & 0_{2\times2}
\end{array}\right]\label{eq:JJp-1}\\
JJ^{\prime} & :=I_{2}\\
JY_{t} & =y_{t},\label{eq:JY-1}\\
JU_{t} & =u_{t},\label{eq:JU-1}\\
J^{\prime}JU_{t} & =U_{t}\\
J\boldsymbol{\nu} & =\nu,\\
J^{\prime}J\boldsymbol{\nu} & =\boldsymbol{\nu}
\end{align}

\end_inset

and
\begin_inset Formula 
\begin{align*}
Y_{t+i} & =\sum_{j=0}^{i}\mathbf{A}^{j}\boldsymbol{\nu}+\mathbf{A}^{i+1}Y_{t-1}+\sum_{j=0}^{i}\mathbf{A}^{j}U_{t+i-j}\\
JY_{t+i} & =\sum_{j=0}^{i}J\mathbf{A}^{j}J^{\prime}J\boldsymbol{\nu}+J\mathbf{A}^{i+1}Y_{t-1}+\sum_{j=0}^{i}J\mathbf{A}^{j}J^{\prime}JU_{t+i-j}\\
y_{t+i} & =\sum_{j=0}^{i}(J\mathbf{A}^{j}J^{\prime})\nu+J\mathbf{A}^{i+1}Y_{t-1}+\sum_{j=0}^{i}(J\mathbf{A}^{j}J^{\prime})u_{t+i-j}
\end{align*}

\end_inset

The response of variable 
\begin_inset Formula $j$
\end_inset

 to a unit shock 
\begin_inset Formula $u_{kt}$
\end_inset

 that occurred 
\begin_inset Formula $i$
\end_inset

 periods ago is
\begin_inset Formula 
\[
\underset{2\times2}{\Phi_{i}}:=J\mathbf{A}^{i}J^{\prime}.
\]

\end_inset

where we note that 
\begin_inset Formula $\Phi_{0}=I_{2}$
\end_inset

.
 The 
\begin_inset Formula $\Phi_{i}$
\end_inset

 are given by
\begin_inset Formula 
\begin{align*}
\Phi_{0} & =I_{2}\\
\Phi_{1} & =A_{1}\\
\Phi_{2} & =\Phi_{1}A_{1}+A_{2}=A_{1}^{2}+A_{2}\\
\Phi_{3} & =\Phi_{2}A_{1}+\Phi_{1}A_{2}=A_{1}^{3}+A_{2}A_{1}+A_{1}A_{2}\\
\vdots\\
\Phi_{i} & =\Phi_{i-1}A_{1}+\Phi_{i-2}A_{2}\\
\vdots
\end{align*}

\end_inset

If 
\begin_inset Formula $y_{t}$
\end_inset

 is covariance stationary, its MA representation is
\begin_inset Formula 
\begin{equation}
y_{t}=\mu+\sum_{i=0}^{\infty}\Phi_{i}u_{t-i}=\mu+\sum_{i=0}^{\infty}\Theta_{i}w_{t-i},\label{eq:ma-1}
\end{equation}

\end_inset

where 
\begin_inset Formula 
\begin{align*}
\Theta_{i} & :=\Phi_{i}B_{0}^{-1}.\\
\boldsymbol{\mu} & :=\mathbb{E}Y_{t}=(I_{4}-A)^{-1}\boldsymbol{\nu}\\
\mu & :=J\boldsymbol{\mu}
\end{align*}

\end_inset

In terms of 
\begin_inset Formula $Y_{t}$
\end_inset


\begin_inset Formula 
\[
Y_{t}=\boldsymbol{\mu}+\sum_{i=0}^{\infty}\mathbf{A}^{i}U_{t-i}
\]

\end_inset

Under stationarity, the IRF can be computed
\begin_inset Formula 
\[
\frac{\partial y_{t}}{\partial w_{t-i}^{\prime}}=\frac{\partial y_{t+i}}{\partial w_{t}^{\prime}}=\Theta_{i}.
\]

\end_inset

The IRF of variable 
\begin_inset Formula $j$
\end_inset

 with respect to shock 
\begin_inset Formula $k$
\end_inset

 is given by
\begin_inset Formula 
\[
\theta_{jk,i}=\frac{\partial y_{j,t+i}}{\partial w_{kt}}
\]

\end_inset

so 
\begin_inset Formula $\Theta_{i}=[\theta_{jk,i}]$
\end_inset

.
 If the VAR is not stable, the same approach works to compute 
\begin_inset Formula $\Phi_{i}$
\end_inset

 and 
\begin_inset Formula $\Theta_{i}$
\end_inset

 but the IRF may not approach zero as 
\begin_inset Formula $i\to\infty$
\end_inset

 and will no longer represent the coefficients of the MA representation.
\end_layout

\begin_layout Standard
The 
\begin_inset Formula $h$
\end_inset

-step ahead forecast error is
\begin_inset Formula 
\[
FE_{t}(h):=y_{t+h}-y_{t+h\mid t}=\sum_{i=0}^{h-1}\Phi_{i}u_{t+h-i}=\sum_{i=0}^{h-1}\Theta_{i}w_{t+h-i},
\]

\end_inset

where
\begin_inset Formula 
\begin{align*}
y_{t+h\mid t} & :=\mathbb{E}[y_{t+h}\mid y_{t},y_{t-1},\ldots]=\mathbb{E}_{t}[y_{t+h}]\\
y_{t+j\mid t} & =y_{t+j}\text{ for }j\leq0
\end{align*}

\end_inset

The forecast error variance is
\begin_inset Formula 
\begin{align}
FEV(h) & :=\mathbb{E}[(y_{t+h}-y_{t+h\mid t})(y_{t+h}-y_{t+h\mid t})^{\prime}]=\sum_{i=0}^{h-1}\Phi_{i}\Sigma_{u}\Phi_{i}^{\prime}=\sum_{i=0}^{h-1}\Theta_{i}\Theta_{i}^{\prime}.\label{eq:fev-1}
\end{align}

\end_inset

The contribution of shock 
\begin_inset Formula $j$
\end_inset

 to the 
\begin_inset Formula $FEV$
\end_inset

 of 
\begin_inset Formula $y_{kt}$
\end_inset

 at horizon 
\begin_inset Formula $h$
\end_inset

 is
\begin_inset Formula 
\begin{align}
FEV_{j}^{k}(h) & =\theta_{kj,0}^{2}+\ldots+\theta_{kj,h-1}^{2},\label{eq:fev_jkh-1}
\end{align}

\end_inset

and the total 
\begin_inset Formula $FEV$
\end_inset

 of 
\begin_inset Formula $y_{kt}$
\end_inset

 at horizon 
\begin_inset Formula $h$
\end_inset

 is
\begin_inset Formula 
\[
FEV^{k}(h)=\sum_{j=1}^{K}FEV_{j}^{k}(h)=\sum_{j=1}^{K}(\theta_{kj,0}^{2}+\ldots+\theta_{kj,h-1}^{2}).
\]

\end_inset

The contribution of the 
\begin_inset Formula $j^{\text{th}}$
\end_inset

 shock to FEV(h) of variable 
\begin_inset Formula $k$
\end_inset

 is
\begin_inset Formula 
\[
\frac{FEV_{j}^{k}(h)}{FEV^{k}(h)},
\]

\end_inset

which add up to one when summed over 
\begin_inset Formula $j=1,\ldots,K$
\end_inset

:
\begin_inset Formula 
\[
1=\frac{FEV_{1}^{k}(h)}{FEV^{k}(h)}+\frac{FEV_{2}^{k}(h)}{FEV^{k}(h)}+\ldots+\frac{FEV_{K}^{k}(h)}{FEV^{k}(h)}.
\]

\end_inset


\end_layout

\begin_layout Standard
Write (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:var_ar1-1"

\end_inset

) as 
\begin_inset Formula 
\[
(I_{4}-\mathbf{A}L)Y_{t}=\boldsymbol{\nu}+U_{t}
\]

\end_inset

where 
\begin_inset Formula $L$
\end_inset

 is the lag operator, or more compactly as
\begin_inset Formula 
\[
\mathcal{A}(L)Y_{t}=\boldsymbol{\nu}+U_{t}
\]

\end_inset

where
\begin_inset Formula 
\[
\mathcal{A}(L):=I_{4}-\mathbf{A}L.
\]

\end_inset

Then, the MA representation in (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:ma-1"

\end_inset

) can be written as
\begin_inset Formula 
\begin{align}
Y_{t} & =\mathcal{A}(L)^{-1}(\boldsymbol{\nu}+U_{t})\label{eq:MA_inv-1}\\
 & =(I_{4}-\mathbf{A}L)^{-1}(\boldsymbol{\nu}+U_{t})\nonumber \\
 & =\sum_{i=0}^{\infty}(\mathbf{A}L)^{i}(\boldsymbol{\nu}+U_{t})\nonumber \\
 & =\sum_{i=0}^{\infty}(\mathbf{A}L)^{i}\boldsymbol{\nu}+\sum_{i=0}^{\infty}(\mathbf{A}L)^{i}U_{t}\\
 & =\sum_{i=0}^{\infty}\mathbf{A}^{i}\boldsymbol{\nu}+\sum_{i=0}^{\infty}\mathbf{A}^{i}L^{i}U_{t}\\
 & =(I_{4}-A)^{-1}\boldsymbol{\nu}+\sum_{i=0}^{\infty}\mathbf{A}^{i}U_{t-i}\\
 & =\boldsymbol{\mu}+\sum_{i=0}^{\infty}\mathbf{A}^{i}U_{t-i}\nonumber 
\end{align}

\end_inset

or, in terms of 
\begin_inset Formula $y_{t}$
\end_inset

 and 
\begin_inset Formula $u_{t}$
\end_inset


\begin_inset Formula 
\begin{align*}
JY_{t} & =J\boldsymbol{\mu}+\sum_{i=0}^{\infty}J\mathbf{A}^{i}J^{\prime}JU_{t-i}\\
y_{t} & =\mu+\sum_{i=0}^{\infty}\Phi_{i}u_{t-i}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $P$
\end_inset

 be the 
\begin_inset Formula $2\times2$
\end_inset

 unique lower triangular matrix with positive main diagonal that is the
 Cholesky factor of the symmetric positive definite matrix 
\begin_inset Formula $\Sigma_{u}$
\end_inset

:
\begin_inset Formula 
\[
\Sigma_{u}=PP^{\prime}.
\]

\end_inset

We can orthogonalize the reduced form shocks 
\begin_inset Formula $u_{t}$
\end_inset

 by
\begin_inset Formula 
\[
u_{t}=PP^{-1}u_{t}=Pv_{t}
\]

\end_inset

where
\begin_inset Formula 
\[
v_{t}:=P^{-1}u_{t}
\]

\end_inset

are orthogonal:
\begin_inset Formula 
\begin{align*}
Var(v_{t}) & =Var(P^{-1}u_{t})\\
 & =P^{-1}Var(u_{t})(P^{-1})^{\prime}\\
 & =P^{-1}\Sigma_{u}(P^{-1})^{\prime}\\
 & =P^{-1}PP^{\prime}(P^{-1})^{\prime}\\
 & =I_{2}
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection
Estimation
\end_layout

\begin_layout Standard
Write the VAR (including a constant term 
\begin_inset Formula $\nu$
\end_inset

) as
\begin_inset Formula 
\begin{align*}
y_{t} & =\nu+A_{1}y_{t-1}+A_{2}y_{t-2}+u_{t}\\
 & =[\nu,A_{1},A_{2}]Z_{t-1}+u_{t}\\
 & =AZ_{t-1}+u_{t}
\end{align*}

\end_inset

where
\begin_inset Formula 
\begin{align*}
\underset{2\times5}{A} & :=[\underset{2\times1}{\nu},\underset{2\times2}{A_{1}},\underset{2\times2}{A_{2}}]\\
Z_{t-1} & :=(1,y_{t-1}^{\prime},y_{t-2}^{\prime})^{\prime}
\end{align*}

\end_inset

Stacking the equations, we can write the VAR as
\begin_inset Formula 
\begin{align*}
Y & =AZ+U
\end{align*}

\end_inset

where
\begin_inset Formula 
\begin{align*}
\underset{2\times T}{Y} & :=[y_{1},\ldots,y_{T}]\\
\underset{5\times T}{Z} & :=[Z_{0},\ldots,Z_{T-1}]\\
\underset{2\times T}{U} & :=[u_{1},\ldots,u_{T}]
\end{align*}

\end_inset

The parameters to be estimated are
\begin_inset Formula 
\[
\underset{2\times5}{A}=[\underset{2\times1}{\nu},\underset{2\times2}{A_{1}},\underset{2\times2}{A_{2}}]
\]

\end_inset

The OLS estimates are
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\underset{2\times5}{\hat{A}} & =[\underset{2\times1}{\hat{\nu}},\underset{2\times2}{\hat{A}_{1}},\underset{2\times2}{\hat{A}_{2}}]=\underset{2\times T}{Y}\underset{T\times5}{Z^{\prime}}(\underset{5\times T}{Z}\underset{T\times5}{Z^{\prime}})^{-1}=\left(\sum_{t=1}^{T}y_{t}Z_{t-1}^{\prime}\right)\left(\sum_{t=1}^{T}Z_{t}Z_{t-1}^{\prime}\right)^{-1}
\end{align*}

\end_inset

The fitted residuals are
\begin_inset Formula 
\begin{align*}
\underset{2\times T}{\hat{U}} & =\underset{2\times T}{Y}-\underset{2\times5}{\hat{A}}\underset{5\times T}{Z}
\end{align*}

\end_inset

The estimated variance-covariance matrix of the residuals is
\begin_inset Formula 
\[
\underset{2\times2}{\hat{\Sigma}_{u}}=\frac{1}{T-4-1}\underset{2\times T}{\hat{U}}\underset{T\times2}{\hat{U^{\prime}}}
\]

\end_inset


\end_layout

\begin_layout Standard
Define the projection matrix
\begin_inset Formula 
\begin{align*}
\underset{T\times T}{P[Z]} & :=\underset{T\times5}{Z^{\prime}}(\underset{5\times T}{Z}\underset{T\times5}{Z^{\prime}})^{-1}\underset{5\times T}{Z}
\end{align*}

\end_inset

The matrix 
\begin_inset Formula $P[Z]$
\end_inset

 is symmetric.
 Then we can write
\begin_inset Formula 
\begin{align*}
\underset{2\times T}{\hat{Y}} & =\underset{2\times5}{\hat{A}}\underset{5\times T}{Z}=\underset{2\times T}{Y}\underset{T\times T}{P[Z]}\\
\underset{2\times T}{\hat{U}} & =\underset{2\times T}{Y}-\underset{2\times5}{\hat{A}}\underset{5\times T}{Z}=\underset{2\times T}{Y}-\underset{2\times T}{\hat{Y}}=\underset{2\times T}{Y}\left(I_{T}-\underset{T\times T}{P[Z]}\right)\\
\underset{2\times T}{\hat{U}}\underset{T\times2}{\hat{U^{\prime}}} & =\underset{2\times T}{Y}\left(I_{T}-\underset{T\times T}{P[Z]}\right)\left(I_{T}-\underset{T\times T}{P[Z]}\right)^{\prime}\underset{T\times2}{Y^{\prime}}=\underset{2\times T}{Y}\left(I_{T}-\underset{T\times T}{P[Z]}\right)\underset{T\times2}{Y^{\prime}}\\
\underset{2\times2}{\hat{\Sigma}_{u}} & =\frac{1}{T-4-1}\underset{2\times T}{Y}\left(I_{T}-\underset{T\times T}{P[Z]}\right)\underset{T\times2}{Y^{\prime}}
\end{align*}

\end_inset

The Cholesky factors of 
\begin_inset Formula $\Sigma_{u}$
\end_inset

 can be computed explicitly.
 Denote the entries of 
\begin_inset Formula $P$
\end_inset

 as follows:
\begin_inset Formula 
\[
P=\left[\begin{array}{cc}
a & 0\\
b & c
\end{array}\right]
\]

\end_inset

where 
\begin_inset Formula $a,c>0$
\end_inset

.
 Then
\begin_inset Formula 
\[
\underset{2\times2}{P}\underset{2\times2}{P^{\prime}}=\left[\begin{array}{cc}
a & 0\\
b & c
\end{array}\right]\left[\begin{array}{cc}
a & b\\
0 & c
\end{array}\right]=\left[\begin{array}{cc}
a^{2} & ab\\
ab & b^{2}+c^{2}
\end{array}\right]
\]

\end_inset

Denote the entries of 
\begin_inset Formula $\hat{\Sigma}_{u}$
\end_inset

 as follows
\begin_inset Formula 
\[
\hat{\Sigma}_{u}=\left[\begin{array}{cc}
\hat{\Sigma}_{u}^{11} & \hat{\Sigma}_{u}^{12}\\
\hat{\Sigma}_{u}^{12} & \hat{\Sigma}_{u}^{22}
\end{array}\right].
\]

\end_inset

Then, 
\begin_inset Formula $\hat{\Sigma}_{u}=PP^{\prime}$
\end_inset

 implies that
\begin_inset Formula 
\[
\left[\begin{array}{cc}
\hat{\Sigma}_{u}^{11} & \hat{\Sigma}_{u}^{12}\\
\hat{\Sigma}_{u}^{12} & \hat{\Sigma}_{u}^{22}
\end{array}\right]=\left[\begin{array}{cc}
a^{2} & ab\\
ab & b^{2}+c^{2}
\end{array}\right]
\]

\end_inset

which gives
\begin_inset Formula 
\begin{align*}
a & =\sqrt{\hat{\Sigma}_{u}^{11}}\\
b & =\hat{\Sigma}_{u}^{12}/\sqrt{\hat{\Sigma}_{u}^{11}}\\
c & =\sqrt{\hat{\Sigma}_{u}^{22}-\left(\hat{\Sigma}_{u}^{12}\right)^{2}/\hat{\Sigma}_{u}^{11}}
\end{align*}

\end_inset

and
\begin_inset Formula 
\[
P=\left[\begin{array}{cc}
\sqrt{\hat{\Sigma}_{u}^{11}} & 0\\
\hat{\Sigma}_{u}^{12}/\sqrt{\hat{\Sigma}_{u}^{11}} & \sqrt{\hat{\Sigma}_{u}^{22}-\left(\hat{\Sigma}_{u}^{12}\right)^{2}/\hat{\Sigma}_{u}^{11}}
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
Let
\begin_inset Formula 
\[
\underset{5\times1}{e_{i}}:=i^{\text{th}}\text{ column of }I_{5}
\]

\end_inset

Then we have
\begin_inset Formula 
\begin{align*}
\underset{2\times1}{\hat{\nu}}=\underset{2\times5}{\hat{A}}\underset{5\times1}{e_{1}} & =[\underset{2\times1}{\hat{\nu}},\underset{2\times2}{\hat{A}_{1}},\underset{2\times2}{\hat{A}_{2}}]\underset{5\times1}{e_{1}}=\underset{2\times T}{Y}\underset{T\times5}{Z^{\prime}}(\underset{5\times T}{Z}\underset{T\times5}{Z^{\prime}})^{-1}\underset{5\times1}{e_{1}}\\
\underset{2\times2}{\hat{A}_{1}}=\underset{2\times5}{\hat{A}}\underset{5\times2}{[e_{2},e_{3}]} & =[\underset{2\times1}{\hat{\nu}},\underset{2\times2}{\hat{A}_{1}},\underset{2\times2}{\hat{A}_{2}}]\underset{5\times2}{[e_{2},e_{3}]}=\underset{2\times T}{Y}\underset{T\times5}{Z^{\prime}}(\underset{5\times T}{Z}\underset{T\times5}{Z^{\prime}})^{-1}\underset{5\times2}{[e_{2},e_{3}]}\\
\underset{2\times2}{\hat{A}_{2}}=\underset{2\times5}{\hat{A}}\underset{5\times2}{[e_{4},e_{5}]} & =[\underset{2\times1}{\hat{\nu}},\underset{2\times2}{\hat{A}_{1}},\underset{2\times2}{\hat{A}_{2}}]\underset{5\times2}{[e_{4},e_{5}]}=\underset{2\times T}{Y}\underset{T\times5}{Z^{\prime}}(\underset{5\times T}{Z}\underset{T\times5}{Z^{\prime}})^{-1}\underset{5\times2}{[e_{4},e_{5}]}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
We compute
\begin_inset Formula 
\begin{align*}
\hat{\Phi}_{0} & =I_{2}\\
\hat{\Phi}_{1} & =\hat{A}_{1}\\
 & =\underset{2\times T}{Y}\underset{T\times5}{Z^{\prime}}(\underset{5\times T}{Z}\underset{T\times5}{Z^{\prime}})^{-1}\underset{5\times2}{[e_{2},e_{3}]}\\
\hat{\Phi}_{2} & =\hat{\Phi}_{1}\hat{A}_{1}+\hat{\Phi}_{0}\hat{A}_{2}\\
 & =\hat{A}_{1}^{2}+\hat{A}_{2}\\
 & =\left\{ \underset{2\times T}{Y}\underset{T\times5}{Z^{\prime}}(\underset{5\times T}{Z}\underset{T\times5}{Z^{\prime}})^{-1}\underset{5\times2}{[e_{2},e_{3}]}\right\} ^{2}+\underset{2\times T}{Y}\underset{T\times5}{Z^{\prime}}(\underset{5\times T}{Z}\underset{T\times5}{Z^{\prime}})^{-1}\underset{5\times2}{[e_{4},e_{5}]}\\
 & =\underset{2\times T}{Y}\underset{T\times5}{Z^{\prime}}(\underset{5\times T}{Z}\underset{T\times5}{Z^{\prime}})^{-1}\left\{ \underset{5\times2}{[e_{2},e_{3}]}\underset{2\times T}{Y}\underset{T\times5}{Z^{\prime}}(\underset{5\times T}{Z}\underset{T\times5}{Z^{\prime}})^{-1}\underset{5\times2}{[e_{2},e_{3}]}+\underset{5\times2}{[e_{4},e_{5}]}\right\} \\
