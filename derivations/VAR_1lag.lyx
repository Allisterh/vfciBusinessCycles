\begin_layout Standard
We model the heteroskedasticity of the first equation by:
\begin_inset Formula 
\[
\log u_{kt}^{2}=C_{k}y_{t}+\varepsilon_{t}
\]

\end_inset

Using the results above, we get
\begin_inset Formula 
\begin{align*}
\log u_{kt}^{2} & =\underset{1\times2}{C_{k}}\underset{2\times1}{y_{t}}+\varepsilon_{t}\\
 & =C_{k}JY_{t}+\varepsilon_{t}\\
 & =C_{k}\sum_{i=0}^{\infty}\Phi_{i}u_{t-i}+\varepsilon_{t}\\
 & =C_{k}u_{t}+C_{k}\sum_{i=1}^{\infty}A_{1}^{i}u_{t-i}+\varepsilon_{t}\\
 & =\underset{1\times2}{C_{k}}\underset{2\times2}{P}\underset{2\times2}{Q}\underset{2\times1}{w_{t}}+C_{k}\sum_{i=1}^{\infty}A_{1}^{i}u_{t-i}+\varepsilon_{t}\\
 & =\underset{1\times2}{C_{k}}\underset{2\times2}{P}\underset{2\times2}{Q}\underset{2\times1}{w_{t}}+C_{k}\sum_{i=1}^{\infty}A_{1}^{i}u_{t-i}+\varepsilon_{t}\\
VFCI_{t} & :=\underset{1\times2}{C_{k}}\underset{2\times1}{y_{t}}\\
\mathbb{E}[VFCI_{t}\underset{2\times1}{w_{t}}] & =\mathbb{E}[\underset{1\times2}{C_{k}}\underset{2\times1}{y_{t}}\underset{2\times1}{w_{t}}]\\
 & =\mathbb{E}\left[\left(\underset{1\times2}{C_{k}}\underset{2\times1}{u_{t}}+C_{k}\sum_{i=1}^{\infty}A_{1}^{i}u_{t-i}\right)\underset{2\times1}{w_{t}}\right]\\
 & =\mathbb{E}\left[\underset{1\times2}{C_{k}}\underset{2\times1}{u_{t}}\underset{2\times1}{w_{t}}+\left(C_{k}\sum_{i=1}^{\infty}A_{1}^{i}u_{t-i}\right)\underset{2\times1}{w_{t}}\right]\\
 & =\mathbb{E}\left[\underset{1\times2}{C_{k}}\underset{2\times2}{P}\underset{2\times2}{Q}\underset{2\times1}{w_{t}}\underset{2\times1}{w_{t}}+\left(C_{k}\sum_{i=1}^{\infty}A_{1}^{i}PQw_{t-i}\right)\underset{2\times1}{w_{t}}\right]\text{ (\ensuremath{w_{t}} are serially uncorrelated)}\\
 & =\mathbb{E}\left[\underset{2\times1}{w_{t}}\underset{1\times2}{w_{t}^{\prime}}\underset{2\times2}{Q^{\prime}}\underset{2\times2}{P^{\prime}}\underset{2\times1}{C_{k}^{\prime}}\right]\\
 & =\mathbb{E}\left[\underset{2\times1}{w_{t}}\underset{1\times2}{w_{t}^{\prime}}\right]\underset{2\times2}{Q^{\prime}}\underset{2\times2}{P^{\prime}}\underset{2\times1}{C_{k}^{\prime}}\\
 & =\underset{2\times2}{Q^{\prime}}\underset{2\times2}{P^{\prime}}\underset{2\times1}{C_{k}^{\prime}}\\
\text{If }\underset{2\times2}{Q^{\prime}}\underset{2\times2}{P^{\prime}}\underset{2\times1}{C_{k}^{\prime}} & =ae_{j}\text{ where }a\text{ is a constant}\\
\text{then } & VFCI_{t}\text{ is an instrument for shock }j
\end{align*}

\end_inset

Now we can solve for 
\begin_inset Formula $Q$
\end_inset

 and 
\begin_inset Formula $a$
\end_inset

.
 Starting from
\begin_inset Formula 
\begin{align*}
\underset{2\times2}{Q^{\prime}}\underset{2\times2}{P^{\prime}}\underset{2\times1}{C_{k}^{\prime}} & =a\underset{2\times1}{e_{j}}
\end{align*}

\end_inset

We multiply both sides by 
\begin_inset Formula $Q$
\end_inset

 and use that 
\begin_inset Formula $QQ^{\prime}=I$
\end_inset

 to get
\begin_inset Formula 
\begin{align*}
\underset{2\times2}{Q}\underset{2\times1}{e_{j}} & =\frac{1}{a}\underset{2\times2}{P^{\prime}}\underset{2\times1}{C_{k}^{\prime}}\\
j^{th}\text{ column of \ensuremath{Q}} & =\frac{1}{a}\underset{2\times2}{P^{\prime}}\underset{2\times1}{C_{k}^{\prime}}
\end{align*}

\end_inset

Now we pick 
\begin_inset Formula $a$
\end_inset

 so that the 
\begin_inset Formula $j^{th}$
\end_inset

 column of 
\begin_inset Formula $Q$
\end_inset

 has length 1:
\begin_inset Formula 
\begin{align*}
\left\Vert \frac{1}{a}\underset{2\times2}{P^{\prime}}\underset{2\times1}{C_{k}^{\prime}}\right\Vert  & =1\\
\left\Vert \underset{2\times2}{P^{\prime}}\underset{2\times1}{C_{k}^{\prime}}\right\Vert  & =|a|
\end{align*}

\end_inset

In the end, the 
\begin_inset Formula $j^{th}$
\end_inset

 column of 
\begin_inset Formula $Q$
\end_inset

 is identified as
\begin_inset Formula 
\[
j^{th}\text{ column of \ensuremath{Q}}=\underset{2\times2}{Q}\underset{2\times1}{e_{j}}=\frac{1}{\left\Vert P^{\prime}C_{k}^{\prime}\right\Vert }\underset{2\times2}{P^{\prime}}\underset{2\times1}{C_{k}^{\prime}}
\]

\end_inset

The structural shock identified is then
\begin_inset Formula 
\begin{align*}
w_{jt} & =\left(\underset{2\times2}{Q}\underset{2\times1}{e_{j}}\right)^{\prime}\underset{2\times2}{P^{-1}}\underset{2\times1}{u_{t}}\\
 & =\left(\frac{1}{\left\Vert P^{\prime}C_{k}^{\prime}\right\Vert }\underset{1\times2}{C_{k}}\underset{2\times2}{P}\right)\underset{2\times2}{P^{-1}}\underset{2\times1}{u_{t}}\\
 & =\frac{1}{\left\Vert P^{\prime}C_{k}^{\prime}\right\Vert }\underset{1\times2}{C_{k}}\underset{2\times1}{u_{t}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Now we express 
\begin_inset Formula $C_{k}$
\end_inset

 in terms of something we can compare to the max share.
 We want to run the following regression:
\begin_inset Formula 
\begin{align}
\log u_{kt}^{2} & =\underset{1\times2}{C_{k}}\underset{2\times1}{y_{t}}+\varepsilon_{t}\nonumber \\
 & =C_{1k}y_{1t}+C_{2k}y_{2t}+\varepsilon_{t}\label{eq:het}
\end{align}

\end_inset

We use the Frisch-Waugh theorem to run the multiple regression as a sequence
 of univariate regressions.
 Consider the following univariate regressions:
\begin_inset Formula 
\begin{align*}
\log u_{kt}^{2} & =D_{u1}y_{1t}+\nu_{u1,t}\\
\log u_{kt}^{2} & =D_{u2}y_{2t}+\nu_{u2,t}\\
y_{1t} & =D_{12}y_{2t}+\nu_{12,t}\\
y_{2t} & =D_{21}y_{1t}+\nu_{21,t}
\end{align*}

\end_inset

with coefficients estimated as
\begin_inset Formula 
\begin{align*}
D_{u1} & =\frac{cov(\log u_{kt}^{2},y_{1t})}{var(y_{1t})}\\
D_{u2} & =\frac{cov(\log u_{kt}^{2},y_{2t})}{var(y_{2t})}\\
D_{12} & =\frac{cov(y_{1t},y_{2t})}{var(y_{2t})}\\
D_{21} & =\frac{cov(y_{2t},y_{1t})}{var(y_{1t})}
\end{align*}

\end_inset

The residuals are
\begin_inset Formula 
\begin{align*}
\nu_{u1,t} & =\log u_{kt}^{2}-D_{u1}y_{1t}\\
 & =\log u_{kt}^{2}-\frac{cov(\log u_{kt}^{2},y_{1t})}{var(y_{1t})}y_{1t}\\
\nu_{u2,t} & =\log u_{kt}^{2}-D_{u2}y_{2t}\\
 & =\log u_{kt}^{2}-\frac{cov(\log u_{kt}^{2},y_{2t})}{var(y_{2t})}y_{2t}\\
\nu_{12,t} & =y_{1t}-D_{12}y_{2t}\\
 & =y_{1t}-\frac{cov(y_{1t},y_{2t})}{var(y_{2t})}y_{2t}\\
\nu_{21,t} & =y_{2t}-D_{21}y_{1t}\\
 & =y_{2t}-\frac{cov(y_{2t},y_{1t})}{var(y_{1t})}y_{1t}
\end{align*}

\end_inset

To recover 
\begin_inset Formula $C_{1k},C_{2k}$
\end_inset

 from 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:het"

\end_inset

 we run
\begin_inset Formula 
\begin{align*}
\nu_{u1,t} & =E_{u1,21}\nu_{21,t}+\eta_{u1,21,t}\\
\nu_{u2,t} & =E_{u2,12}\nu_{12,t}+\eta_{u2,12,t}
\end{align*}

\end_inset

which gives
\begin_inset Formula 
\begin{align*}
E_{u1,21} & =\frac{cov(\nu_{u1,t},\nu_{21,t})}{var(\nu_{21,t})}\\
 & =\frac{cov\left(\log u_{kt}^{2}-\frac{cov(\log u_{kt}^{2},y_{1t})}{var(y_{1t})}y_{1t},y_{2t}-\frac{cov(y_{2t},y_{1t})}{var(y_{1t})}y_{1t}\right)}{var\left(y_{2t}-\frac{cov(y_{2t},y_{1t})}{var(y_{1t})}y_{1t}\right)}\\
 & =\frac{var(y_{1t})}{var(y_{1t})var(y_{2t})-cov(y_{1t},y_{2t})^{2}}\left[cov(\log u_{kt}^{2},y_{2t})-\frac{cov(\log u_{kt}^{2},y_{1t})cov(y_{1t},y_{2t})}{var(y_{1t})}\right]\\
E_{u2,12} & =\frac{cov(\nu_{u2,t},\nu_{12,t})}{var(\nu_{12,t})}\\
 & =\frac{cov\left(\log u_{kt}^{2}-\frac{cov(\log u_{kt}^{2},y_{2t})}{var(y_{2t})}y_{2t},y_{1t}-\frac{cov(y_{1t},y_{2t})}{var(y_{2t})}y_{2t}\right)}{var\left(y_{1t}-\frac{cov(y_{1t},y_{2t})}{var(y_{2t})}y_{2t}\right)}\\
 & =\frac{var(y_{2t})}{var(y_{1t})var(y_{2t})-cov(y_{1t},y_{2t})^{2}}\left[cov(\log u_{kt}^{2},y_{1t})-\frac{cov(\log u_{kt}^{2},y_{2t})cov(y_{1t},y_{2t})}{var(y_{2t})}\right]
\end{align*}

\end_inset

Then
\begin_inset Formula 
\begin{align}
C_{1k} & =E_{u2,12}\nonumber \\
 & =\frac{var(y_{2t})}{var(y_{1t})var(y_{2t})-cov(y_{1t},y_{2t})^{2}}\left[cov(\log u_{kt}^{2},y_{1t})-\frac{cov(\log u_{kt}^{2},y_{2t})cov(y_{1t},y_{2t})}{var(y_{2t})}\right]\label{eq:c1}\\
