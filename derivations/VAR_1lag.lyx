\begin_inset Formula 
\begin{align*}
C_{1k} & =\frac{var(y_{2t})}{var(y_{1t})var(y_{2t})-cov(y_{1t},y_{2t})^{2}}\left[cov(\log u_{kt}^{2},y_{1t})-\frac{cov(y_{1t},y_{2t})}{var(y_{2t})}cov(\log u_{kt}^{2},y_{2t})\right]\\
 & \approx\frac{1}{e_{k}^{\prime}\Sigma_{u}e_{k}}\frac{1}{var(y_{1t})var(y_{2t})-cov(y_{1t},y_{2t})^{2}}\left[var(y_{2t})cov(u_{kt}^{2},y_{1t})-cov(y_{1t},y_{2t})cov(u_{kt}^{2},y_{2t})\right]\\
